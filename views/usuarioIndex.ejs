<div>
  <a style="color: red;" href="/"> 
    Volver a la Home  </a>
</div>
 
  
  <br>
  
  <h1><%= tituloDePagina %></h1>
   <form action="/usuario/buscador" method="POST"> 
     <input type="text" name="busqueda" placeholder="Buscar">
    
     <% if (listadoUsuarios.length !=0) { %>  
     <ul>
      <% for (let i= 0; i < listadoUsuarios.length ; i++) { %>
    <li>
    
         <a href="/usuario/detalle/<%= listadoUsuarios [i].id %> ">  <!-- Hipervinculo qu elo dirija al detalle del usuario-->
           <%= listadoUsuarios[i].nombre_de_usuario %>  </a>       
    </li>
    
    <% } %> 
  </ul>
  <a style="color: red;" href="/usuario"> 
    Volver al buscador  </a>
  <% } else { %> 
    <p> No se encontraron usuarios</p>
    <a style="color: red;" href="/usuario"> 
      Volver al buscador  </a>
    <% } %> 

  <button type="submit"> Buscar </button>
</form>
